            android:name=".ui.login.outStudent.OutStudentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.setUp.SetUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.contactUs.ContactUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.changePass.ChangePassActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.login.askLeave.StudentsListActivity" />
        <activity android:name=".ui.login.sendMessage.ClassMessageActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.login.askLeave.TeacherAskLeaveActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>